{% extends 'base.html.twig' %}

{% block menu %}
    {% include 'menu/menu.html.twig' %}
{% endblock %}

{% block titulo %}
{% endblock %}

{% block ventamaquetas %}
    {% for evento in eventosM.eventos %}
        <!--Datos Por mostrar-->
<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">

        <h1 class=" text-uppercase mb-0">{{ evento.evento.nombre }}</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Portfolio Item 1-->
        <div class="col-md-6 col-lg-4 mb-5">
            <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                <img class="img-fluid" src="assets/img/flauta.jpg" alt="" />
            </div>
        </div>

        <div style="display: flex; margin: 0 auto;">
            <div class="col-lg-4 ml-auto"><p class="lead">{{ evento.evento.descripcion }}</p></div>
            <div class="col-lg-4 mr-auto"><p class="lead">Fecha de lanzamiento: {{ evento.evento.fechaevento }}</p></div>
        </div>
    </div>
    <div style="display: flex; margin: 0 auto;" class="col-md-6 col-lg-4 mb-5">
        <div style="margin: 0 auto;" class="col-md-6 col-lg-4 mb-5">Organizador: {{ evento.organizador.nombre }}{{ evento.organizador.apellidos }}</div>
        <div style="margin: 0 auto;" class="col-md-6 col-lg-4 mb-5">Email organizador: {{ evento.organizador.email }}{{ evento.organizador.direccion }}</div>
        <div style="margin: 0 auto;" class="col-md-6 col-lg-4 mb-5">Ubicacion evento: {{ evento.evento.ubicacion }}</div>
    </div>

</header>
    {% endfor %}

{% endblock %}


